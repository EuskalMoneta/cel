<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Compte Eusko</title>

    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet"  type='text/css'>
    <link href="{{ asset('css/all.min.css') }}" rel="stylesheet"  type='text/css'>
    <link href="{{ asset('css/flickety.min.css') }}" rel="stylesheet"  type='text/css'>
    <link href="{{ asset('css/style.css') }}" rel="stylesheet"  type='text/css'>
    <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('images/favicon-96x96.png') }}">
    <link rel="manifest" href="{{ asset('manifest.json') }}">

    {% block css %}

    {% endblock %}

</head>

<body>

<header>
    <!-- Navigation -->
    {% block menu_top %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-eusko static-top fixed-top">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_homepage') }}"><img src="{{ asset('images/logo-eusko-topbar.png') }}" alt="eusko logo" style="width: 60px;"></a>
                <div class="navbar-right">

                    {% if app.user %}
                        {#<a href="{{ path('app_homepage') }}">
                            <i class="fal fa-home cel-menu-icon"></i>
                            <br /> Accueil
                        </a>#}
                        <a href="{{ path('app_aide') }}">
                            <i class="fal fa-question-circle cel-menu-icon"></i>
                            <br /> {{"Aide" | trans }}
                        </a>

                        <a href="{{ path('app_profil') }}">
                            <i class="fal fa-user cel-menu-icon"></i>
                            <br /> {{"Profil" | trans }}
                        </a>

                        <a href="{{ path('app_logout') }}">
                            <i class="fal fa-sign-out cel-menu-icon"></i>
                            <br /> {{"Quitter" | trans }}
                        </a>
                    {% else %}
                        <a href="{{ path('app_anon_lang', {'locale': 'eu'}) }}" style="font-size: 16px;">
                            EUS
                        </a>
                        <a href="{{ path('app_anon_lang', {'locale': 'fr'}) }}" style="font-size: 16px;">
                            FR
                        </a>
                    {% endif %}
                </div>
            </div>
        </nav>
    {% endblock %}

</header>
<main>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 mt-2">
                {% for label, messages in app.flashes() %}
                    {% for message in messages %}
                        <div class="alert alert-dismissible alert-{{ label }}">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            {{ message | raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>


    <!-- Page Content -->
    {% block body %}

    {% endblock %}
</main>

{% block menu_footer %}
{% if app.user %}
<footer class="footer fixed-bottom mt-auto">
    <div class="container">

                <div class="row">
                    <div class="col-3">
                        <a href="{{ path('app_homepage') }}">
                            <i class="fal fa-home"></i>
                            <br /> {{"Accueil" | trans }}
                        </a>
                    </div>
                    <div class="col-3">
                        {% if is_granted("ROLE_TOURISTE") %}
                            <a href="{{ path('app_virement') }}">
                                <img src="{{ asset('images/virement-icon.png') }}">
                                <br /> {{"Paiment" | trans }}
                            </a>
                        {% else %}
                            <a href="{{ path('app_virement') }}">
                                <img src="{{ asset('images/virement-icon.png') }}">
                                <br /> {{"Virements" | trans }}
                            </a>
                        {% endif %}

                    </div>
                    <div class="col-3">
                        <a href="{{ path('app_change') }}">
                            <img src="{{ asset('images/icon-change-3.png') }}">
                            <br /> {{"Change" | trans }}
                        </a>
                    </div>
                    {% if is_granted("ROLE_CLIENT") %}
                        <div class="col-3">
                            <a href="{{ path('app_prelevement_autorisation') }}">
                                <i class="fal fa-list"></i>
                                <br /> {{"Prélèvements" | trans }}
                            </a>
                        </div>
                    {% elseif is_granted("ROLE_TOURISTE") %}
                        <div class="col-3">
                            <a href="{{ path('app_bons_plans') }}">
                                <i class="fal fa-shopping-bag"></i>
                                <br /> {{"Bons plans" | trans }}
                            </a>
                        </div>

                    {% elseif is_granted("ROLE_PARTENAIRE") %}
                        <div class="col-3">
                            <a href="{{ path('app_prelevement') }}">
                                <i class="far fa-list"></i>
                                <br /> {{"Prélèvements" | trans }}
                            </a>
                        </div>

                    {% endif %}

                </div>

            </div>
        </footer>
    {% endif %}
{% endblock %}


<!-- Bootstrap core JavaScript -->
<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
<script src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.2.2/dist/latest/bootstrap-autocomplete.min.js"></script>

{% block js %}

{% endblock %}
</body>

</html>
