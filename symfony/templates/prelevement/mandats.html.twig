{% extends 'base.html.twig' %}



{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 offset-md-2 mt-2">
                <h2 class="secondary-color mb-4"> {{ "Mandats" | trans }} </h2>

                {% if mandatsEnATT is empty and mandatsValide is empty and mandatsRev is empty and mandatsRef is empty %}
                    <div class="text-center mt-4">
                        <h3 class="mt-4">{{"Aucun mandat" | trans }}</h3>
                        <img src="{{ asset('images/no-data.png') }}" width="30%"/>
                    </div>
                {% endif %}

                {% if mandatsEnATT is not empty %}
                    <h3 class="main-color">{{ "En attente de validation" | trans }} </h3>

                    {% for mandat in mandatsEnATT %}
                        <div class="row p-2" >
                            <div class="col-2 text-right">
                                <span class="fa-stack" style="vertical-align: top;">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fal fa-clock fa-stack-1x fa-inverse"></i>
                                </span>
                            </div>
                            <div class="col-6">
                                <div class="main-color text-semi-bold"> {{ mandat.nom_debiteur }}</div>
                                <div class="secondary-color"> {{ "Créé le " | trans }}{{  mandat.date_derniere_modif |localizeddate('long', 'none', app.request.getLocale()) }}</div>
                            </div>
                            <div class="col-4">
                                <div class="float-right ">
                                    <a class="btn btn-danger btn-guard" href="{{ path('app_prelevement_autorisation_delete', {'id': mandat.id}) }}"> <i class="fa fa-trash-alt"></i> </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}



                {% if mandatsValide is not empty %}
                    <h3 class="main-color mt-4">  {{ "Validés" | trans }} </h3>
                    {% for mandat in mandatsValide %}
                        <div class="row pt-4 pb-4 pl-2 pr-2 " {% if loop.index is divisible by(2) %} style="background-color: #f9f9f9;" {% endif %}>
                            <div class="col-2 text-right">
                                <span class="fa-stack" style="vertical-align: top;">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="far fa-user fa-stack-1x fa-inverse"></i>
                                </span>
                            </div>
                            <div class="col-6">
                                <div class="main-color text-semi-bold"> {{ mandat.nom_debiteur }}</div>
                                <div class="secondary-color"> {{ "Validé le " | trans }}{{  mandat.date_derniere_modif |localizeddate('long', 'none', app.request.getLocale()) }}</div>
                            </div>
                            <div class="col-4">
                                <div class="float-right ">
                                    <a class="btn btn-danger btn-guard" href="{{ path('app_prelevement_autorisation_delete', {'id': mandat.id}) }}"> <i class="far fa-trash-alt"></i> </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {% if mandatsRev is not empty %}
                    <h3 class="main-color mt-4">  {{ "Révoqués" | trans }} </h3>
                    {% for mandat in mandatsRev %}
                        <div class="row pt-4 pb-4 pl-2 pr-2 " {% if loop.index is divisible by(2) %} style="background-color: #f9f9f9;" {% endif %}>
                            <div class="col-2 text-right">
                                <span class="fa-stack" style="vertical-align: top;">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="far fa-times fa-stack-1x fa-inverse"></i>
                                </span>
                            </div>
                            <div class="col-6">
                                <div class="main-color text-semi-bold"> {{ mandat.nom_debiteur }}</div>
                                <div class="secondary-color"> {{ "Révoqué le " | trans }}{{  mandat.date_derniere_modif |localizeddate('long', 'none', app.request.getLocale()) }}</div>
                            </div>
                            <div class="col-4">
                                <div class="float-right ">
                                    <a class="btn btn-danger btn-guard" href="{{ path('app_prelevement_autorisation_delete', {'id': mandat.id}) }}"> <i class="far fa-trash-alt"></i> </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {% if mandatsRef is not empty %}
                    <h3 class="main-color mt-4">  {{ "Réfusés" | trans }} </h3>
                    {% for mandat in mandatsRef %}
                        <div class="row pt-4 pb-4 pl-2 pr-2 " {% if loop.index is divisible by(2) %} style="background-color: #f9f9f9;" {% endif %}>
                            <div class="col-2 text-right">
                                <span class="fa-stack" style="vertical-align: top;">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="far fa-times fa-stack-1x fa-inverse"></i>
                                </span>
                            </div>
                            <div class="col-6">
                                <div class="main-color text-semi-bold"> {{ mandat.nom_debiteur }}</div>
                                <div class="secondary-color"> {{ "Refusé le " | trans }}{{  mandat.date_derniere_modif |localizeddate('long', 'none', app.request.getLocale()) }}</div>
                            </div>
                            <div class="col-4">
                                <div class="float-right ">
                                    <a class="btn btn-danger btn-guard" href="{{ path('app_prelevement_autorisation_delete', {'id': mandat.id}) }}"> <i class="far fa-trash-alt"></i> </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}


                <div class="before-footer">
                    <hr>
                    <div class="text-center mb-4">
                        <a href="{{ path('app_prelevement_mandats_ajout') }}"><i class="far fa-user-plus main-color" style="font-size: 32px;"></i><br /></a>
                        <a href="{{ path('app_prelevement_mandats_ajout') }}" class="btn btn-outline-primary btn-slim main-color">{{ "Ajouter des mandats" | trans }}  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirm-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">{{"Supprimer un mandat" | trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{"Êtes-vous sûr de vouloir supprimer ce mandat ?" | trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a href="#" class="btn btn-outline-success" id="modal-valid">Valider</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block js %}
    <script type="text/javascript">

        $('.btn-guard').click(function (e){
            $('#confirm-modal').modal('show');
            e.preventDefault();
            $('#modal-valid').attr('href', $(this).attr('href'));
        });
    </script>
{% endblock %}