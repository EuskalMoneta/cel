{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ title | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 mt-2">
                <div class="mt-md-4">
                    <h1 class="sur-titre-ouverture">{{ 'Ouverture de votre compte eusko' | trans }}</h1>
                    <div style="width: 80%">
                        <div>{{ "ETAPE 6/8" | trans }}</div>
                        <h1 class="mb-3">{{ title | trans }}</h1>
                    </div>

                    <p class="text-subtitle">{{ "cotisation.explication" | trans | raw }}</p>

                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(document).ready(function(){

            function disableMonthly() {
                $("#form_subscription_periodicity_1").attr("disabled", true);
                $("#form_subscription_periodicity_1").prop("checked", false);
                $("#form_subscription_periodicity_0").prop("checked", true);

            }
            if($("#form_subscription_amount_3").prop("checked") == true){
                disableMonthly();
            }

            $("input[name='form[subscription_amount]']").change(function() {
                if($(this).val() == '5'){
                    disableMonthly();
                } else {
                    $("#form_subscription_periodicity_1").attr("disabled", false);
                }
            });

        });
    </script>
{% endblock %}
