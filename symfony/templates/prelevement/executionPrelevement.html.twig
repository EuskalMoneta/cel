{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 offset-md-2 mt-2">

                <div class="p-4 " >
                    <h2 class="main-color">{{ "Exécuter des prélèvements" | trans }}</h2>
                    
                        <div class="mb-4">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col mt-4">
                                    <h3 class="mb-0">{{ form_label(form.tableur) }}</h3>

                                    {% if app.request.locale == 'fr' %}
                                        <p>Télécharger un fichier d'exemple pour <a href="{{ asset('images/tableur-fr.xlsx') }}" style="text-decoration: underline;">Excel</a> ou pour <a href="{{ asset('images/tableur-fr.ods') }}" style="text-decoration: underline;">OpenOffice / LibreOffice</a> </p>
                                    {% else %}
                                        <p>A traduire dans le code : Télécharger un fichier d'exemple pour <a href="{{ asset('images/tableur-eu.xlsx') }}" style="text-decoration: underline;">Excel</a> ou pour <a href="{{ asset('images/tableur-eu.ods') }}" style="text-decoration: underline;">OpenOffice / LibreOffice</a> </p>
                                    {% endif %}
                                    {% if form_errors(form.tableur) != '' %}
                                        <span class="invalid-feedback d-block"><span class="d-block">
                                <span class="form-error-icon badge badge-danger text-uppercase">Erreur</span> <span class="form-error-message">{{ form_errors(form.tableur) }}</span>
                            </span></span>
                                    {% endif %}
                                    {{ form_widget(form.tableur, {'attr': {'class': 'form-control'}}) }}

                                </div>
                            </div>


                            <div class="row">
                                <div class="col mt-4  mb-4">
                                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>

                            {{ form_rest(form) }}
                        </div>


                </div>


                <div class="before-footer text-center">
                    <hr>
                    <div class="row">
                        <div class="col">
                            <div class="ml-4 mr-2 mb-4">
                                <div class="mt-4">
                                    <a href="{{ path('app_prelevement_autorisation') }}" class="btn btn-outline-primary">{{ "Gerer les autorisations de prélèvement sur mon compte" | trans }}</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="ml-4 mr-2 mb-4">
                                <div class="mt-4">
                                    <a href="{{ path('app_prelevement_mandats') }}" class="btn btn-outline-primary">{{ "Gérer les mandats" | trans }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>





{% endblock %}

{% block js %}
    <script type="text/javascript">

    </script>
{% endblock %}